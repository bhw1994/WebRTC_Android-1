<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhiteBackground</item>
    </style>

    <style name="AppToolbar" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>


    <!-- Call Activity Fab Style -->
    <style name="CallFabDefault" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/space_xx_large</item>
    </style>
</resources>
